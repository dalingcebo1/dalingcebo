# Copy this template and fill in your actual credentials
# Create a .env.local file with your actual values
# Run: cp .env.example .env.local

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Admin Access (change this to a secure password!)
NEXT_PUBLIC_ADMIN_KEY=your-secure-admin-password-here

# Supabase - REQUIRED
# GET THESE FROM YOUR SUPABASE PROJECT SETTINGS > API
# Click "Legacy anon, service_role API keys" tab to get these
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Email Server (for magic link login - optional for now)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@dalingcebo.com
ADMIN_EMAIL=admin@dalingcebo.com

# Google OAuth (optional - for "Sign in with Google")
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Payment - Stripe (get from stripe.com/dashboard)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Payment - Yoco (get from portal.yoco.com - Optional for South African payments)
NEXT_PUBLIC_YOCO_PUBLIC_KEY=your_yoco_public_key
YOCO_SECRET_KEY=your_yoco_secret_key
YOCO_WEBHOOK_SECRET=your_yoco_webhook_secret

# Email - Resend (get from resend.com)
RESEND_API_KEY=your_resend_api_key

# Deposit Configuration
DEPOSIT_RESERVATION_DAYS=14
DEPOSIT_REMINDER_DAYS=7,1
DEPOSIT_MIN_PERCENTAGE=30
DEPOSIT_REFUND_ADMIN_FEE=0.10

# Shipping & Tax
FREE_SHIPPING_THRESHOLD=5000
FLAT_SHIPPING_RATE=150
INTERNATIONAL_SHIPPING_RATE=500
VAT_RATE=0.15

# Optional: Google Site Verification for Search Console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Optional: Analytics Configuration
# For Google Analytics:
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# For Plausible (privacy-friendly alternative):
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Optional: Error Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=

# Optional: Performance Monitoring Endpoint
NEXT_PUBLIC_VITALS_ENDPOINT=
